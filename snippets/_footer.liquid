<div class="w-full border-t border-slate-200 ">
    <footer class="pt-8 max-w-5xl m-auto">
        <div class="flex-wrap items-center justify-start hidden mb-4 space-x-2 md:flex grow md:space-x-4">
            {{ site.settings.footer_menu_html }}
        </div>
        <div class="flex flex-col items-center justify-center md:flex-row md:justify-between">
            <div class="mb-4 md:mb-0">
                <div class="flex flex-col items-center shrink-0 md:flex-row">
                    <!-- Logo -->
                    <a class="inline-flex mb-2 md:mb-0" href="{{site.index_path}}" aria-label="{{ site.name }}">
                        {% assign logo = 'images/logo.png' | asset_url %}
                        <img src="{{ site.settings.logo_url | default: logo }}" class="h-8" alt="{{ site.name }} LOGO" />
                    </a>
                    <div class="ml-4 text-sm text-slate-500"> {{ site.name }} <span class="md:hidden lg:inline">. {{ 'generic.copyright' | t }}.</span> {{ site.settings.copyright_info }} </div>
                </div>
            </div>
            <!-- Social links -->
            <ul class="inline-flex space-x-2">
                <li>
                    <span class="text-sm sm:hidden lg:inline text-slate-400"></span>
                </li>
            </ul>
        </div>
    </footer>
</div>
