{% comment %} 页面列表展示效果 {% endcomment %}
<article class="py-4 border-b border-slate-200 dark:border-slate-700">
  <a href="{{ page.path }}" class="flex items-start">
      <div class="mt-2 mr-3">
          <svg class="w-4 h-4 fill-current shrink-0" viewBox="0 0 16 16">
              <path class="text-primary-darken" d="M4 8H0v4.9c0 1 .7 1.9 1.7 2.1 1.2.2 2.3-.8 2.3-2V8z" />
              <path class="text-primary" d="M15 1H7c-.6 0-1 .4-1 1v11c0 .7-.2 1.4-.6 2H13c1.7 0 3-1.3 3-3V2c0-.6-.4-1-1-1z" />
          </svg>
      </div>
      <h2 class="text-lg font-bold leading-snug md:text-xl text-slate-800 dark:text-slate-100 hover:underline hover:text-indigo-600">{{ page.link_text }}</h2>
  </a>
  <div class="pl-7">
      {% if page.settings.description %}
        <div class="text-slate-500">{{ page.settings.description }}</div>
      {% endif %}
      <ul class="flex flex-wrap">
        {% for tag in page.tags %}
          <li class="flex items-center after:block after:content-['·'] last:after:content-[''] after:text-sm after:text-slate-400 dark:after:text-slate-600 after:px-2">
              <a class="text-sm font-bold text-primary hover:text-primary dark:hover:text-primary-darken" href="{{ tag.path }}">{{ tag.name }}</a>
          </li>
        {% endfor %}
      </ul>
      <!-- sub page list -->
      {% render "sub_page_list", page: page %}
  </div>

</article>
